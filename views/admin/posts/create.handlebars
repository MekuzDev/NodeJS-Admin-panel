<h1>Create new post</h1>

<form action="/admin/posts/create" method="POST" enctype="multipart/form-data"  >
<div class="form-group">
  <label for="title">Title</label>
  <input type="text" name="title" id="title" class="form-control" placeholder="Enter post title" >
</div>
<div class="form-group">
  <label for=""></label>
  <input type="file" name="file"  class="form-control" placeholder="upload a file" aria-describedby="helpId">
</div>

<div class="form-group">
  <label for="status">Status</label>
  <select name="status" id="status" class="form-control"/>
      <option value="public">Public</option>
       <option value="private">Private</option>
        <option value="private">Draft<option>
  </select>
</div>

<div class="form-check ml-4">
  <label for="allowComments">
  <input type="checkbox" name="allowComments" id="allowComment" class="form-check-input"/>
 Allow Comments

</label>
</div>

<div class="form-group">
  <label for="body">Body</label>
  <textarea  name="body" id="body" cols="30" rows="10" class="form-control" placeholder="Enter post here..." aria-describedby="helpId" style="resize: none;" ></textarea>

</div>

<input type="submit" class="btn btn-info"/>

</form>