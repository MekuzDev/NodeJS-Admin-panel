<h1>Update Post</h1>

<form action="/admin/posts/edit/{{post.id}}?_method=PU
T" method="post"  >
<div class="">
  <label for="title">Title</label>
  <input type=text name="title"  class="form-control"   value='{{post.title}}'>
</div>

<div class="form-group">
  <label for="status">Status</label>
  <select name="status"  class="form-control" required/>
      {{#select post.status}}
      <option value = "public">Public</option>
      <option value = "private">Private</option>
      <option value = "draft">Draft<option>
      {{/select}}
  </select>
</div>

<div class="form-check ml-4">
  <label for="allowComments">
  <input type="checkbox" name="allowComments"{{#if post.allowComments}} checked="checked" {{/if}} id="allowComment" class="form-check-input"/>
 Allow Comments

</label>
</div>

<div class="form-group">
  <label for="body">Body</label>
  <textarea  name="body" id="body" cols="30" rows="10" class="form-control"  aria-describedby="helpId" style="resize: none;" >{{post.body}}</textarea>

</div>

<input type="submit" class="btn btn-info"/>

</form>